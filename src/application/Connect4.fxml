<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Connect4Controller">
    <Label fx:id="titleLabel" text="Connect 4" style="-fx-text-fill: white; -fx-font-size: 48px;" />
    <GridPane fx:id="gameGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
        <!-- connect 4 circles are added dynamically here -->
    </GridPane>
    <Button fx:id="resetButton" text="Reset Game" onAction="#resetGame" style="-fx-background-color: #bd4a4a"/>
    <Button fx:id="toggleSmartButton" text="Turn off Smart AI" onAction="#toggleAISmartMode" style="-fx-background-color: #bd4a4a"/>
</VBox>